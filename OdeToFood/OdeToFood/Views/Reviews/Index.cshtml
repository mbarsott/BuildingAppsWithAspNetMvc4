@using System.Drawing.Imaging
@model IEnumerable<OdeToFood.Models.RestaurantReview>

@{
    ViewBag.Title = "Index";
    //    var firstReview = Model.First();
}

@* @firstReview.Name *@

<h2>The Latest Reviews</h2>

<p>We are showing the latest @Model.Count() reviews</p>
<!-- p>@VirtualPath</p -->

@foreach (var item in Model)
{
    // if you write just "Review:", razor will think it is C#. You need to prepend with @:
    @:Review:
    <div class="review">
        <h4>@item.Name</h4>
        <span>@item.Rating</span>
        <p>@item.City, @item.Country</p>
    </div>
    @:}
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>